<Window x:Class="BankingSystem.TransferWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankingSystem"
        mc:Ignorable="d"
        Title="TransferWindow"
        Height="250" Width="300"
        MinHeight="250" MinWidth="300"
        MaxHeight="250" MaxWidth="300"
        WindowStartupLocation="CenterScreen">
    <Grid>
       <StackPanel Margin="10" Background="White" Orientation="Vertical" >
           <TextBlock HorizontalAlignment="Center" Margin="0 15 0 0" Text="Введите номер карты получателя" />
            <TextBox x:Name="CardNumber" Height="25" Margin="50 15 50 0" TextAlignment="Center" FontSize="14"/>
            <TextBlock HorizontalAlignment="Center" Margin="0 15 0 0" Text="Введите сумму для перечисления" />
            <TextBox x:Name="TransferSum" Height="25" Margin="50 15 50 0" TextAlignment="Center" FontSize="14"/>
            <Button Margin="70 15 70 0" Content="Перевести" Command="{Binding TransferButtonWindow}"/>
       </StackPanel>
    </Grid>
</Window>
