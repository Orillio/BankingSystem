<Window x:Class="BankingSystem.DepositWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankingSystem"
        mc:Ignorable="d"
        Title="DepositWindow"
        Height="200" Width="250"
        MinHeight="200" MinWidth="250"
        MaxHeight="200" MaxWidth="250"
        WindowStartupLocation="CenterScreen">
    <StackPanel>
        <TextBlock Margin="10 50 10 0" Text="Введите сумму для начисления" TextAlignment="Center"/>
        <TextBox x:Name="DepositField" Margin="30 10 30 0" FontSize="15" TextAlignment="Center"/>
        <Button Content="Пополнить" Margin="50 10 50 0" Command="{Binding DepositButtonWindow}"/>
    </StackPanel>
</Window>
